<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.microservice.test_ml.CheckWordController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="inputField" promptText="Enter a word..."/>
    <Button text="Check Word" onAction="#onCheckWordClick"/>
    <Label fx:id="resultLabel"/>
</VBox>
